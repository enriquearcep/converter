<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Converter.Views.MenuView"
             Title="MenuView"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>

        <Color x:Key="PrimaryAppColor">#A6A6A6</Color>
        <Color x:Key="SecondaryAppColor">#595959</Color>
        <Color x:Key="ThirdAppColor">#404040</Color>
        <Color x:Key="AccentAppColor">#262626</Color>
        <Color x:Key="AxiliarAppColor">#0D0D0D</Color>
        <Color x:Key="TextColor">#FFF</Color>
        
    </ContentPage.Resources>

    <Grid
        ColumnDefinitions="*, *, *"
        RowDefinitions="0.1*, *, *, *"
        >

        <Label
            BackgroundColor="{StaticResource AccentAppColor}"
            FontAttributes="Bold"
            FontSize="Title"
            Grid.ColumnSpan="3"
            HorizontalTextAlignment="Center"
            Text="CONVERTER"
            TextColor="{StaticResource TextColor}"
            VerticalTextAlignment="Center"
            />

    </Grid>
    
</ContentPage>